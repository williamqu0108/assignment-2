<div class="row" style="margin: 100px;">
    <div class="offset-md-3 col-md-6 col-sm-12">
        <div class="login" id="contentArea">
            <h1 class="display-4">Register</h1>

            <% if(messages.length > 0) { %>
                <div id="messageArea" class="alert alert-danger">
                  <%= messages %>
                </div>
              <% } %>
              
            <form id="registerForm" method="POST" novalidate>
                <p class="hint-text">Create your own account. It's free and only takes a minute.</p>

                <div class="form-group">
                <div class="row">
                    <p class="lead"><i class="fas fa-user-shield"></i> Personal Information</p>
                    <div class="col-md-6">
                    <input class="form-control" type="text" name="firstName" id="firstName" placeholder="First Name" required>
                    </div>
                    <div class="col-md-6">
                    <input class="form-control" type="text" name="lastName" id="lastName" placeholder="Last Name" required>
                    </div>
                </div>
                </div>
                <div class="form-group">
                <div class="row">
                    <div class="col-md-12">
                    <input type="email" class="form-control" id="emailAddress" name="emailAddress" required
                    value="" placeholder="Email">
                    </div>
                </div>
                
                </div>

                <div class="form-group mt-4">
                    <div class="row">
                        <p class="lead"><i class="fas fa-user-shield"></i> System Identification</p>
                        <div class="col-md-12">
                        <input type="text" class="form-control" id="username" name="username"  required
                        value="" placeholder="Username">   
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-12">
                        <input type="password" class="form-control" id="password" name="password"  required
                        value="" placeholder="Password">   
                    </div>
                </div>
                
                </div>

                <div class="form-group mb-2">
                    <div class="row">
                        <div class="col-md-12">
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"  required
                        value="" placeholder="Confirm Password">
                        </div>
                    </div>
                </div>
                
                                                    
                <div class="text-right">
                <button id="submitButton" type="submit" class="btn btn-primary btn-lg"><i class="fas fa-user-plus"></i> Register</button>
                <a href="/" id="cancelButton" class="btn btn-warning btn-lg"><i class="fas fa-undo-alt"></i> Cancel</a>
                </div>
            </form>
            
        </div>
        <p class="text-center text-muted small">
            Already have an account? 
            <a href="/login">Sign in</a>
        </p>
    </div>
</div>