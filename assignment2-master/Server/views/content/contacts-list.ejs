<div class="container" style="margin-top: 100px;">
<h1 style="text-align: center;"><%= title %></h1>

<div class="row">
    <div class="col">

        <% if(displayName) { %> 
            <a href="/contacts-list/add" id="addButton" class="btn btn-primary mb-1"><i class="fas fa-plus-circle"></i> Add Contacts List</a>
            <% } %>

        <table class="table table-striped table-bordered table-hover" style="margin-top: 20px;">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Contact Name</th>
                    <th scope="col">Contact number</th>
                    <th scope="col">Email Address</th>

                    <% if(displayName) { %>
                        <th></th>
                        <th></th>
                        <% } %>
                </tr>
            </thead>
            <tbody>
                <% for(let count=0; count < list.length; count++) { %>
                    <!-- Repeatable Row Template -->
                    <tr>
                        <th scope="row"><%= count + 1 %></th>
                        <td><%= list[count].name %></td>
                        <td><%= list[count].number %></td>
                        <td><%= list[count].address %></td>

                        <% if(displayName) { %>
                            <td class="text-center"><a href="/contacts-list/update/<%= list[count]._id %>" class="btn btn-primary btn edit"><i class="fas fa-edit fa-sm"></i> Update</a></td>
                            <td class="text-center"><a href="/contacts-list/delete/<%= list[count]._id %>" class="btn btn-danger btn delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td> 
                        <% } %>
                    </tr>
                <% } %>    
            </tbody>
        </table>

    </div>
</div>
</div>